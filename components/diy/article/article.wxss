/* common.wxss */
@import "/utils/common.wxss";

/* 文章组 */

.diy-article {
  background: #f7f7f7;
}

.diy-article:first-child {
  margin-top: 40rpx;
}

.diy-article .article-item {
  padding: 0rpx;
  background: #fff;
}

.diy-article .article-item:last-child {
  margin-bottom: 0;
}

.diy-article .article-item .article-item__image image {
  display: block;
}

/* 小图模式 */

.show-type__10 {
  display: flex;
}

.show-type__10 .article-item__left {
  padding-right: 20rpx;
}

.show-type__10 .article-item__title {
  min-height: 72rpx;
}

.article-item__title {
  padding: 0 40rpx;
  font-weight: 700;
  color: #333;
}

.article-item__content {
  padding: 0 40rpx;
  color: #666;
  font-size: 26rpx;
  margin-top: 30rpx;
}

.article-item__footer {
  padding: 0 40rpx;
  display: flex;
  padding-bottom: 40rpx;
}

.show-type__10 .article-item__image image {
  width: 240rpx;
}

/* 大图模式 */

.show-type__20 .article-item__image image {
  width: 100%;
}

.flex-1 {
  flex: 1;
}

.btn-details {
  width: 100rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  border:2rpx solid rgba(102,102,102,1);
  font-size: 26rpx;
  color: #333333;
}

.view-like-wrap,.article-views,.article-likes {
  display: flex;
  align-items: baseline ;
  justify-content: flex-start;
  font-size: 24rpx;
  color: #999;
}

.view-like-wrap {
  height: 46rpx;
  padding-top: 14rpx;
}

.article-views {
  margin-right: 70rpx;
}

.icon-article-views {
  background-image: url(data:image/png;base64,);
  width: 41rpx;
  height: 24rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center;
  margin-right: 12rpx;
}

.icon-article-likes {
  background-image: url(data:image/png;base64,);
  width: 30rpx;
  height: 31rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center;
  margin-right: 19rpx;
}

