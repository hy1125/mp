/* wxParse.wxss */
@import "/wxParse/wxParse.wxss";

page {
  background: #fff;
}

.container {
  padding: 30rpx;
}

.wxParse-img {
  width: 706rpx;
}

.article-little-image {
  width: 750rpx;
}

.goods {
    display: flex;
    height: 290rpx;
    width: 100%;
    padding: 20rpx;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    box-sizing: border-box;
}

.left {
  width: 250rpx;
  margin-right: 30rpx;
}

.right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 20rpx;
  position: relative;
}

.btn-to-goods {
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 4rpx;
  text-align: center;
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  background-color: #FF5C00;
  color: #fff;
}

.goodsImg {
  width: 100%;
  height: 100%;
}

.like-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0 100rpx 0;
  flex-direction: column;
  color: #999;
  font-size: 26rpx;
}

.like {
  background-color: #FF5C00;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.active {
  opacity: 0.6;
}

.icon-like {
  width: 38rpx;
  height: 40rpx;
  background-image: url(data:image/png;base64,);
  background-size: 100% 100%;
  background-position: center;
  background-repeat: no-repeat;
}